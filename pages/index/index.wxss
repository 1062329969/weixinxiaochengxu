/**index.wxss**/
page{
  background-color: #e4e4e4
}
.navigator-hover {
    color:blue;
}
/** 自定义其他点击态样式类 **/
.other-navigator-hover {
    color:red;
}
#content{
  padding: 20rpx;
}
.lists{
  background: #fff;
  margin-bottom: 30rpx;
  height: 500rpx;
}
.pic_and_text{
  background: #ccc;
  height: 85%;
  position: relative;
}
.pic_and_text image{
  background: #c97;
  width: 100%;
  height: 100%;
}
.pic_and_text text{
  /* background: #f8f; */
  position: absolute;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 20rpx;
  width: 100%; 
  margin: 0 auto;
  display: block;
  bottom: 0;
  left: 0;
}
.dooption image{
  width: 50rpx;
  height: 50rpx;
  background-color:#fff;
  vertical-align: middle;
  margin:10rpx 10rpx 10rpx 20rpx;
}
.right_icon_view{
  float: right;
  overflow: hidden;
}
.icon_sum{
  display: inline-block;
  height: 50rpx;
  margin-top: 10rpx; 
  font-size: 25rpx;
  color: #666;
}